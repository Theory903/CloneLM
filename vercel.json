{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm run install:all",
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
